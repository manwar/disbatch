// Run these to make mongo go faster
db.users.ensureIndex( {'group': 1} )
db.users.ensureIndex( {'username': 1} )
db.queues.ensureIndex( {'tid' :1} )
db.tasks.ensureIndex( {'iid': 1} )
db.tasks.ensureIndex( {'node': 1} ) 
db.tasks.ensureIndex( {'status': 1} ) 
db.tasks.ensureIndex( {'tid': 1} ) 
db.tasks.ensureIndex( {'tid': 1, 'status': 1} ) 
db.tasks.ensureIndex( {'node': 1, 'status': 1, 'tid': 1} )
db.tasks.ensureIndex( {'node': 1, 'status': 1} )
